{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "esnext", "es2016", "esnext.asynciterable"],
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "strict": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", ""],
}